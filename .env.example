# Base de données PostgreSQL
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://user:password@localhost:5432/childcare_db

# Secret pour les sessions (OBLIGATOIRE en production)
# Générer avec: openssl rand -base64 32
SESSION_SECRET=your-secret-key-here-change-this-in-production

# Environment
NODE_ENV=development

# Port (Render définit automatiquement en production)
PORT=5000

# Object Storage (optionnel - Replit uniquement)
ENABLE_OBJECT_STORAGE=false

# Variables PostgreSQL (définies automatiquement par Render)
PGHOST=your-db-host
PGPORT=5432
PGUSER=your-db-user
PGPASSWORD=your-db-password
PGDATABASE=your-db-name
